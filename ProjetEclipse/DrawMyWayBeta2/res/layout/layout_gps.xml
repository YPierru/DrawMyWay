<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="6" />

    <RelativeLayout
        android:id="@+id/et_place"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4" >

        <LinearLayout
            android:id="@+id/centralLinLay"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/html_instructions"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#ead585"
                android:text="HTML INSTRUCTIONS" />

            <TextView
                android:id="@+id/distanceParcourue"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="#465e67"
                android:text="200m" />

            <LinearLayout
                android:id="@+id/centralLinLaySub"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/distanceTotal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00bdb3"
                    android:text="3500m" />

                <TextView
                    android:id="@+id/dureeTotal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#a386eb"
                    android:text="2h25min32s" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/vitesseMoy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/centralLinLay"
            android:background="#32cd32"
            android:text="32km/h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/centralLinLay"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/kilometrageTrajet"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#564f52"
                android:text="8km" />

            <TextView
                android:id="@+id/finA"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e3a115"
                android:text="12h20" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>